<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.0/css/bulma.min.css" />
    @Styles.Render("~/bundles/style")
</head>
<body>
    <nav class="navbar main-menu" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <div class="navbar-item">
                <p class="title is-6 has-text-white">CHAT</p>
            </div>
            <span class="navbar-burger burger" data-target="menu">
                <span></span>
                <span></span>
                <span></span>
            </span>
        </div>
        <div id="menu" class="navbar-menu">
            <div class="navbar-start">
                <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link has-text-white">Contactos</a>
                    <div class="navbar-dropdown">
                        <a class="navbar-item has-text-white" href="/Contacts/Find">Buscar</a>
                        <a class="navbar-item has-text-white" href="/Contacts/Requests">Mis solicitudes</a>
                        <a class="navbar-item has-text-white" href="/Contacts/MyContacts">Mis contactos</a>
                    </div>
                </div>
                <a class="navbar-item has-text-white" href="/Messages/Inbox">Chatear</a>
                <a class="navbar-item has-text-white" href="/Options">Opciones</a>
            </div>
            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        <a class="button is-danger" href="/Authentication/Close">
                            <strong>Cerrar Session</strong>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    @RenderBody()
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/scripts")
</body>
</html>